<main>
 <div class="toumei">
<div class='container mt-5'>
  <div class='row'>
    <table class="customers">
      <thead class="thead text-center">
        <tr>
          <th>ログイン</th>
        </tr>
      </thead>
    </table>
  </div>

  <div class= 'row mb-5 mt-4'>
    <p class='col-5 offset-4'>会員の方はこちらからログイン</p>
  </div>
  <%= form_with model: @customer, url: customer_session_path do |f| %>
    <div class="row mb-3">
      <label for="inputEmail3" class="col-sm-2 col-form-label offset-2">メールアドレス</label>
      <div class="col-sm-8">
      <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control"%>
      </div>
    </div>

    <div class="row mb-4">
      <label for="inputPassword3" class="col-sm-2 col-form-label offset-2">パスワード</label>
      <div class="col-sm-8">
      <%= f.password_field :password, autocomplete: "current-password",class:"form-control" %>
      </div>
    </div>


    <div class="row mb-5">
      <div class="col-2 offset-4">
      <%= f.submit "ログイン", class:"button"%>
      </div>
    </div>
  <% end %>
  <div class="row">
    <table class="customers">
      <thead class="thead text-center">
        <tr>
          <th>会員登録がお済みでない方</th>
        </tr>
      </thead>
    </table>
  </div>
  <div class="row mt-4">
    <p class='col-5 offset-4'><%= render "public/shared/links" %></p>
 </div>
 </div>
 </div>
 </main>




