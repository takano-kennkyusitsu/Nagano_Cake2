<h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>


  <div class="field-signup" >
    <%= f.label :"名前" %>
    <%= f.label :"(姓)" %>
    <%= f.text_field :first_name, autofocus: true %>
    <%= f.label :"(名)" %>
    <%= f.text_field :last_name, autofocus: true %>
  </div>

  <div class="field-signup">
    <%= f.label :"フリガナ" %>
    <%= f.label :"(セイ)" %>
    <%= f.text_field :first_name_kana, autofocus: true %>
    <%= f.label :"(メイ)"%>
    <%= f.text_field :last_name_kana, autofocus: true %>
  </div>

  <div class="field-signup">
    <%= f.label :"メールアドレス" %>
    <%= f.text_field :email %>
  </div>

  <div class="field-signup">
    <%= f.label :"郵便番号(ハイフンなし)" %>
    <%= f.text_field :postcode, autofocus: true %>
  </div>

  <div class="field-signup">
    <%= f.label :"住所" %>
    <%= f.text_field :address, autofocus: true, class: "form-control-static address" %>
  </div>

  <div class="field-signup">
    <%= f.label :"電話番号(ハイフンなし)" %>
    <%= f.text_field :tel %>
  </div>

  <div class="field-signup">
    <%= f.label :"パスワード(6文字以上)" %>
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

   <div class="field-signup">
    <%= f.label :"パスワード(確認用)" %>
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

    <div class="field">
      <h4 class="already entry">既に登録済みの方</h4>
      <p class="new-link"><%= render "public/shared/links" %>からログインしてください。</p>
    </div>

