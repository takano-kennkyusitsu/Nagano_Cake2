<main>
<div class="toumei">
<div class="container-fluid mt-5">
  <div class="row mb-4">
    <div class="col-2 offset-2 text-center">
      <h3 class="box">新規会員登録</h3>
    </div>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>


    <div class="form_group d-flex">
    <label class="col-md-2 col-form-label offset-1">
    <%= f.label :"名前" %>
    <%= f.label :"(姓)" %>
    </label>
    <div class="col-md-2  ml-5"><%= f.text_field :first_name, autofocus: true ,class: "form-control"%></div>
    <%= f.label :"(名)" %>
    <div class="col-md-2 ml-5"><%= f.text_field :last_name, autofocus: true ,class: "form-control"%></div>
  </div>


  <div class="form_group d-flex">
    <label class="col-md-2 col-form-label offset-1">
    <%= f.label :"フリガナ" %>
    <%= f.label :"(セイ)" %>
    </label>
    <div class="col-md-2  ml-5"><%= f.text_field :first_name_kana, autofocus: true ,class: "form-control"%></div>


    (メイ)
    <div class="col-md-2  ml-5"><%= f.text_field :last_name_kana, autofocus: true ,class:"form-control"%></div>
  </div>

  <div class="form_group d-flex">
    <label class="col-md-2 col-form-label offset-1"><%= f.label :"メールアドレス" %></label>
    <div class="col-md-2  ml-5"><%= f.text_field :email,class: "form-control" %></div>
  </div>

  <div class="form_group d-flex">
    <label class="col-md-2 col-form-label offset-1">郵便番号(ハイフンなし)</label>
    <p class="col-md-2  ml-5"><%= f.text_field :postcode, autofocus: true,class: "form-control" %></p>
  </div>

  <div class="form_group d-flex">
    <label class="col-md-2 col-form-label offset-1"><%= f.label :"住所" %></label>
    <div class="col-md-3 ml-5"><%= f.text_field :address, autofocus: true, class: "form-control"%></div>
  </div>

  <div class="form_group d-flex">
    <label class="col-md-2 col-form-label offset-1 mb-1">電話番号(ハイフンなし)</label>
    <div class="col-md-2  ml-5"><%= f.text_field :tel ,class: "form-control"%></div>
  </div>

  <div class="form_group d-flex">
    <label class="col-md-2 col-form-label offset-1"><%= f.label :"パスワード(6文字以上)" %></label>
    <div class="col-md-2 ml-5"><%= f.password_field :password, autocomplete: "off" ,class: "form-control"%></div>
  </div>

   <div class="form_group d-flex">
    <label class="col-md-2 col-form-label offset-1"><%= f.label :"パスワード(確認用)" %></label>
    <div class="col-md-2  ml-5"><%= f.password_field :password_confirmation, autocomplete: "off" ,class: "form-control"%></div>
  </div>

  <div class="form_group d-flex ml-5">
    <div class="col-md-2 ml-2"></div>
    <div class="col-md-3 offset-1"><%= f.submit :"新規登録" ,class:" button" %></div>
  </div>
<% end %>

    <div class="row mb-4 mt-5">
    <div class="col-3 offset-2 text-center">
      <h3 class="box">既に登録済みの方</h3>
    </div>
  </div>
     <div class="row mb-4">
    <div class="col-5 offset-3 d-flex">
      <strong class="new-link"><%= render "public/shared/links" %><span class="ml-3"></span>からログインしてください。</strong>
    </div>
  </div>
    </div>
  </div>
  </main>

