<main>
  <div class="toumei">
    <div class="container">
      <div class="row">
       <table class="customers">
          <thead class="thead text-center">
            <tr>
              <th><span class="top-header">新規会員登録</span></th>
            </tr>
          </thead>
        </table>
    
        
        <table class="product-new mt-5">
          <tbody>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "public/shared/error_messages", resource: resource %>
            
            <tr>
              <th><%= f.label :"名前" %></th>
              <th><%= f.label :"(姓)" %></th>
              <th><%= f.text_field :first_name, autofocus: true %></th>
              <th><%= f.label :"(名)" %></th>
              <th><%= f.text_field :last_name, autofocus: true %></th>
            </tr>
  
            <tr>
                <th><%= f.label :"フリガナ" %></th>
                <td><%= f.label :"(セイ)" %></td>
                <th><%= f.text_field :first_name_kana, autofocus: true %></th>
                <th><%= f.label :"(メイ)"%></th>
                <th><%= f.text_field :last_name_kana, autofocus: true %></th>
            </tr>
        </table>
        <table class="product-new ">
            <tr>
              <th><%= f.label :"メールアドレス" %></th>
              <th><%= f.text_field :email %></th>
            </tr>
            
            <tr>
              <th><%= f.label :"郵便番号(ハイフンなし)" %></th>
              <th><%= f.text_field :postcode, autofocus: true %></th>
            </tr>
            
            <tr>
              <th><%= f.label :"住所" %></th>
              <th><%= f.text_field :address, autofocus: true, class:"col-sm-11" %></th>
            </tr>
            
            <tr>
              <th><%= f.label :"電話番号(ハイフンなし)" %></th>
              <th><%= f.text_field :tel %></th>
            </tr>
            
            <tr>
              <th><%= f.label :"パスワード(6文字以上)" %></th>
              <th><%= f.password_field :password, autocomplete: "off" %></th>
            </tr>
        
            <tr>
              <th><%= f.label :"パスワード(確認用)" %></th>
              <th><%= f.password_field :password_confirmation, autocomplete: "off" %></th>
            </tr>
        
            <tr>
              <th></th>
              <td><%= f.submit "新規登録" ,class: 'button' %></td>
            </tr>
            
          <% end %>
          </tbody>
        </table>
        <h5 class="mx-auto mt-5">既に登録済みの方  <%= link_to "こちら", new_customer_session_path %> からログインしてください</h5>
      </div>
    </div>
  </div>
</main>
