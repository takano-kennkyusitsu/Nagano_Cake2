
<main>
<div class="toumei">

  <div class="container">
  <div class="row">
<main>

<h3 class="p-1"><span class="top-header">新規会員登録</span></h3>


  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>


  <div class="form-group row" >
    <%= f.label :"名前", class:"col-sm-3" %>
    <%= f.label :"(姓)", class:"col-sm-1" %>
     <div class="col-md-3">
    <%= f.text_field :first_name, autofocus: true %>
     </div>

    <%= f.label :"(名)" %>
     <div class="col-md-3">
    <%= f.text_field :last_name, autofocus: true %>
     </div>
  </div>

  <div class="form-group row" >
    <%= f.label :"フリガナ", class:"col-sm-3" %>
    <%= f.label :"(セイ)", class:"col-sm-1" %>
    <div class="col-md-3">
    <%= f.text_field :first_name_kana, autofocus: true %>
    </div>
    <%= f.label :"(メイ)"%>
    <div class="col-sm-3">
    <%= f.text_field :last_name_kana, autofocus: true %>

  </div>
    </div>


  <div class="form-group row" >
    <%= f.label :"メールアドレス",class:"col-sm-4" %>
    <div class="col-md-3">
    <%= f.text_field :email %>
    </div>
  </div>

   <div class="form-group row" >
    <%= f.label :"郵便番号(ハイフンなし)",class:"col-sm-4" %>
    <div class="col-sm-3">
    <%= f.text_field :postcode, autofocus: true %>

  </div>
    </div>


  
   <div class="form-group row" >
    <%= f.label :"住所",class:"col-sm-4" %>
    <div class="col-sm-6">
    <%= f.text_field :address, autofocus: true, class:"col-sm-11" %>
  </div>
    </div>
    <div class="form-group row" >
    <%= f.label :"電話番号(ハイフンなし)",class:"col-sm-4" %>
    <div class="col-sm-3">
    <%= f.text_field :tel %>
      </div>
        </div>

  <div class="form-group row" >
    <%= f.label :"パスワード(6文字以上)",class:"col-sm-4" %>
    <div class="col-sm-3">
    <%= f.password_field :password, autocomplete: "off" %>

  </div>
    </div>


  <div class="form-group row" >
    <%= f.label :"パスワード(確認用)",class:"col-sm-4" %>
     <div class="col-sm-3">
    <%= f.password_field :password_confirmation, autocomplete: "off" %>

  </div>
    </div>


   <div class="form-group row" >
    <div class="col-md-3 mt-3 offset-4">
    <%= f.submit "新規登録" ,class:'button  btn-block col-8'%>
  </div>
  </div>
<% end %>
    <div class="form-group row">
      <div class="col-md-2 mt-2 offset-2">
      <h4 class="top-header2">既に登録済みの方</h4>
      </div>
        </div>
        <div class="row mt-3">
    <div class="col-5 offset-3">
    <%= link_to "こちら", new_customer_session_path %> からログインしてください。
      </div>
        </div>
          </div>
            </div>
 </main>

