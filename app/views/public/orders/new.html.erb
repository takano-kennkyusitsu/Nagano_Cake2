<h3>注文情報入力</h3>
<%= form_with model: @order, url: orders_confirm_path do |f| %>
  
  <div>
    <%= f.label :payment_method, "支払方法" %>
    <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
    <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>
  
    <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
    <%= f.label :payment_method, Order.payment_methods_i18n[:transfer]%>
  </div>
  
  <div> 
    <%= f.label :address,"お届け先" %>
  </div>
  
  <div>
    <%= f.radio_button :address_number, 1 %>
    <%= f.label :address_number_1, "ご自身の住所" %>
    〒<%= current_customer.postcode %><%= current_customer.address %><%= current_customer.first_name %><%= current_customer.last_name %>
  </div> 
  
  <div>
    <%= f.radio_button :address_number, 2 %>
    <%= f.label :address_number_2, "登録済住所から選択" %>
    <%= f.collection_select :shipping_id, current_customer.shippings.all, :id, :full_address %> 
    </div>
  
  <div>
    <%= f.radio_button :address_number, 3 %>
    <%= f.label :address_number_3, "新しいお届け先" %>
  </div>
  
  <div>
    <%= f.label :postcode, "郵便番号(ハイフンなし)" %>
    <%= f.text_field :postcode %>
  </div>
  <div>
    <%= f.label :address,"住所" %>
    <%= f.text_field :address %>
  </div>
  <div>
    <%= f.label :name, "宛名" %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.submit "確認画面へ進む", class: " btn-primary" %>
  </div>
<% end %>

