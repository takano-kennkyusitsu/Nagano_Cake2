
<main>
  <div class="toumei">
   <div class="container">
   <div class="row">
    <div class="col-md-5">
        
    <h6>注文情報</h6>
  <table class="design01">
      <tr>
        <th>注文日</th>
        <td><%= @order.created_at.strftime("%Y/%m/%d") %></td>
      </tr>
      <tr>
        <th>配送先</th>
        <td><%= @order.postcode %><%= @order.address %></td>
      </tr>
      <tr>
        <th>支払方法</td>
        <td><%= @order.payment_method %></td>
      </tr>
      <tr>
        <th>ステータス</th>
        <td><%= @order.status %></td>
      </tr>
  </table>
</div>

<div class="col-md-5">
    <h6>請求情報</h6>
  <table class="design01" >
      <tr>
        <th>商品合計</th>
        <td><%= @total.to_s(:delimited) %></td>
      </tr>
      <tr>
        <th>配送料</th>
        <td><%= @order.postage %></td>
        
      </tr>
      <tr>
        <th>ご請求額</th>
        <td><%= @total_price.to_s(:delimited) %></td>
      </tr>
  </table>
</div>
</div>
<div class="row">

<div class="col-md-9">
    <h6>注文内容</h6>
  <table class="design01" >
    <thead>
      <tr>
          <th>商品</th>
          <th>単価（税込）</th>
          <th>個数</th>
          <th>小計</th>
      </tr>
    </thead>
    <tbody>
          <% @order_details.each do |order_detail| %>
        <tr>
          <td><%= order_detail.product.name %></td>
          <td><%= order_detail.product.in_tax_price %></td>
          <td><%= order_detail.quantity %></td>
          <td><%= order_detail.sub_total %></td>
        </tr>
          <% end %>
    </tbody>
  </table>
</div>
</div>
</div>
</div>
</main>

