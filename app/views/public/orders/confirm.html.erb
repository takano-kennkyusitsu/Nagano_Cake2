
<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><% @cart_items.each do |cart_item| %></td>
      <td><%= cart_item.product.name %></td>
      <td><%= cart_item.product.tax_in_price %></td>
      <td><%= cart_items.product.quantity %></td>
      <td><%= cart_item.subtotal %></td>
    </tr>
  </tbody>
<table>
        <tr>
          <td>送料</td>
          <td><%= @order.postage%></td>
        </tr>
        <tr>
          <td>商品合計</td>
          <td><%= @total.to_s(:delimited) %></td>
        </tr>
         <tr>
          <td>請求金額</td>
          <td><%= @total_price.to_s(:delimited) %></td>
        </tr>
      </table>
    </div>
  </div>

  <table>
    <tr>
      <th>支払方法</th>
      <td><%= @order.payment_method %></td>
    </tr>
    <tr>
      <th>お届け先</th>
      <td>〒<%= @order.post_code %><%= @order.address %><br><%= @order.name %></td>
    </tr>
  </table>

  <div >
    <%= form_with model: @order, url: orders_path, method: :post do |f| %>
    <%= f.hidden_field :name,value: @order.name %>
    <%= f.hidden_field :post_code,value: @order.post_code %>
    <%= f.hidden_field :postage,value: @order.postage %>
    <%= f.hidden_field :payment_method,value: @order.payment_method %>
    <%= f.hidden_field :address,value: @order.address %>
    <%= f.hidden_field :total_price, value: @total + @order.postage %>
    <%= f.submit "注文を確定する", class:"btn btn-success" %>
    <% end %>
  </div>
</table>


