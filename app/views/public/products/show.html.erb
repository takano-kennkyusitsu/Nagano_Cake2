<main>
<div class="toumei">
<div class="container">
  <div class="row mt-5">
    <div class="col-2">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th class="text-center">ジャンル検索</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre|  %>
            <tr>
              <td><%=genre.name %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
   <div class="col-10">
     <div class="row">
       <div class="col-4">
       <%=image_tag @product.get_image ,class:"img-fluid"%>
       </div>
       <div class="col-5 offset-1">
         <h3><%= @product.name %></h3>
         <div><%= @product.about %></div>
         <h4 class="mt-5 mb-5">¥<%= @product.in_tax_price.to_s(:delimited) %>(税込)</h4>

         <%=form_with model:@cart_item,local:true do |f| %>
        
         <%= f.hidden_field :product_id, :value => @product.id %>
       <div class="row">
         <div class="col-3"><%= f.select :quantity,*[1..10]  , { include_blank: '個数選択'}, { class: 'form-select pr-4 py-2'  , required: true } %></div>
         <div class="col-3 offset-2"><%=f.submit 'カートに入れる',class:"btn btn-success"%></div>
         <% end %>
       </div>
       </div>
     </div>
   </div>
 </div>
</div>

</div>
</main>