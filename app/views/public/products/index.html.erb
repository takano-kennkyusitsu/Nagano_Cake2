<div class="container">
  <div class="row mt-5">
    <div class="col-2">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th class="text-center">ジャンル検索</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre|  %>
            <tr>
              <td><%=genre.name %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-10 pl-3">
      <section>

        <div class="d-flex flex-wrap">
          <% @products.each do |item| %>
            <div class="mt-5 mr-3">
              <%= link_to product_path(item.id) do %>
                <%=image_tag item.image, size: "200x100" %><br>
                <%= item.name %><br>
              <% end %>
              ¥<%= (item.price*1.1).floor %>
            </div>
          <% end %>
        </div>
        <div class="mt-5">
         <%= paginate @products %>
        </div>
      </section>
    </div>
  </div>
</div>
