<div class="container mt-5">
  <div class="row">

<h1>ショッピングカート</h1>
<% @cart_items.each do |cart_item| %>
<table class="table table-bordered mt-5">
  <tr class="bg-light">
    <th>商品名</th>
    <th>単価(税込)</th>
    <th>数量</th>
    <th>小計</th>
    <th></th>
  </tr>
  <tr>
    <td><%=cart_item.product.name %></td>
    <td><%= cart_item.product.in_tax_price %></td>
    <td><%=cart_item.quantity %></td>

    <% @sum += cart_item.subtotal %>
    <td><%=cart_item.subtotal %></td>
    <td class="btn btn-danger">削除する</td>
  </tr>
  </table>
<% end %>
</div>
<div class="row mt-2 mb-5">
  <div class="col-4 offset-4">
   <div class="p-3 border bg-light">合計金額</div>
  </div>
  <div class="col-4">
  <div class="p-3 border bg-light"><%=@sum %></div>
  </div>


</div>


</div>
