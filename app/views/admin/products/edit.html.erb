<main>
  <div class="toumei">
    <table class="products mb-5">
      <thead class="thead text-center">
        <tr>
          <th class="text-center">商品編集</th>
        </tr>
      </thead>
    </table>
      <%= form_with model: @product, url: admin_product_path do |f| %>
        <table class="product-edit text-center">
        <tbody>
        <tr>
          <th>商品画像</th>
          <th><%= f.file_field :image %></th>
        </tr>
        <tr>
          <th><%= f.label :name, "商品名" %></th>
          <th><%= f.text_field :name %></th>
        </tr>
        <tr>
          <th><%= f.label :about, "商品説明" %></th>
          <th><%= f.text_area :about %></th>
        </tr>
        <tr>
          <th><%= f.label "ジャンル" %></th>
          <th><%= f.collection_select :genre_id, @genres, :id, :name %></th>

        </tr>
        <tr>
          <th><%= f.label :about, "税抜価格" %></th>
          <th><%= f.text_field :price, {class: 'money'} %>円</th>
        </tr>
        <tr>
          <th><%= f.label :about, "販売ステータス" %></th>
        	<th>
        	  <%= f.radio_button :is_active, 0 %>販売停止中
            <%= f.radio_button :is_active, 1 %>販売中
          </th>
        </tr>
        </tbody>
      </table>
      <table class="customer-edit">
        <thead class="text-center">
          <tr>
            <th><%= f.submit '変更を保存', class: 'button' %></th>
          </tr>
        </thead>
      </table>
    <% end %>
  </div>
</main>
