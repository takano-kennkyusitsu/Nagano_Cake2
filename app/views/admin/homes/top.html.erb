
<main>
  <div class='toumei'>
  <div class='container'>
  <div class="row mt-3">
    <h4 class="col-md-3 box text-center m-4">注文履歴一覧</h4>
  </div>
  <div class="row">
    <div class="col-md-10 mx-auto">
      <table class="table">
        <thead class="bg-light text-center">
          <th class="col-2">購入日時</th>
          <th class="col-2">購入者</th>
          <th class="col-2">注文個数</th>
          <th class="col-2">注文ステータス</th>
        </thead>
        <tbody class="text-center">
          <% @orders.each do |order| %>
            <tr>
              <td><%= link_to order.created_at.strftime("%Y/%m/%d %H:%M:%S"), admin_order_path(order) %></td>
              <td><%= order.customer.last_name %><%= order.customer.first_name %></td>
              <td><%= order.order_details.count %></td>
              <td><%= order.status%></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <%= paginate @orders %>
  </div>
  </div>
  </div>
</main>

