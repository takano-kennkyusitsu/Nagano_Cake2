<main>
  <h4>ジャンル一覧・追加</h4>
  <div>
    <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
      <h5>ジャンル名</h5>
      <%= f.text_field :name %>
      <%= f.submit '新規登録', class: 'button' %>
    <% end %>  
  </div>
  <table>
    <thead>
      <tr>
        <th>ジャンル</th>
      </tr>  
      <tbody>
        <% @genres.each do |genre| %>
        <tr>
          <td>
            <%= genre.name %>
          </td>
          <td><%=link_to '編集する', edit_admin_genre_path(genre.id), class: 'button' %></td>
        </tr>
        <% end %>
      </tbody>
    </thead>
  </table>
</main>