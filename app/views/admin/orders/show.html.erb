<main>
  
<div class="container" >
<div class="row">
<div class="col-md-5">
  
  <h3>注文履歴詳細</h3>
  <table >
    <tr>
      <td>購入者</td>
      <th> <%= link_to @order.customer.first_name + @order.customer.last_name,admin_customer_path(@order) %></th>
    </tr>
    <tr>
      <td>注文日</td>
      <th><%= @order.created_at.strftime("%Y/%m/%d") %></th>
    </tr>
    <tr>
      <td>配送先</td>
      <th><%= @order.postcode %><br>
          <%= @order.address %></th>
    </tr>
    <tr>
      <td>支払方法</td>
      <th><%= @order.payment_method %></th>
    </tr>
    <tr>
      <td>ステータス</td>

      <%= form_with model: @order, url:admin_order_path do |f| %>
          <th><%= f.select :status, Order.statuses.keys.to_a, {} %><%= f.submit "更新", class: "button" %></th>
        <% end %> 

    </tr>
  </table>
</div>
</div>




<div class="row">
<div class="col-md-9">  
  <table class="design01">
    <thead>
      <tr>
          <th>商品</th>
          <th>単価（税込）</th>
          <th>個数</th>
          <th>小計</th>
          <th>製作ステータス</th>
      </tr>
    </thead>
    <tbody>
          <% @order_details.each do |order_detail| %>
        <tr>
          <td><%= order_detail.product.name %></td>
          <td><%= order_detail.product.in_tax_price %></td>
          <td><%= order_detail.quantity %></td>
          <td><%= order_detail.sub_total %></td>
          
      
        <%= form_with model: order_detail, url:admin_order_detail_path do |f| %>
          <td><%= f.select :making_status, OrderDetail.making_statuses.keys.to_a, {} %><%= f.submit "更新", class: "button" %></td>
        <% end %> 
        </tr>
          <% end %>
    </tbody>
  </table>
</div>


<div class="col-md-3">  
    <h6>請求情報</h6>
  <table>
      <tr>
        <td>商品合計</td>
        <th><%= @total.to_s(:delimited) %></th>
      </tr>
      <tr>
        <td>配送料</td>
        <th><%= @order.postage %></th>
      </tr>
      <tr>
        <td>ご請求額</td>
        <th><%= @total_price.to_s(:delimited) %></th>
  </table>
</div>

</div> 
</div>
</main>
  
