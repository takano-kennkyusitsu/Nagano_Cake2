<main>
  <div class="toumei">
  <div class="container" >
  <div class="row">
  <div class="col-md-5 mb-5">
    <table class="customers">
      <thead class="thead text-center">
        <tr>
          <th>注文履歴詳細</th>
        </tr>
      </thead>
    </table>
    <table >
      <tr>
        <td>購入者</td>
        <td> <%= link_to @order.customer.first_name + @order.customer.last_name,admin_customer_path(@order), class: "link" %></td>
      </tr>
      <tr>
        <td>注文日</td>
        <td><%= @order.created_at.strftime("%Y/%m/%d") %></td>
      </tr>
      <tr>
        <td>配送先</td>
        <td><%= @order.postcode %><br>
            <%= @order.address %></td>
      </tr>
      <tr>
        <td>支払方法</td>
        <td><%= @order.payment_method %></td>
      </tr>
      <tr>
        <td>ステータス</td>
  　　　<td><%= form_with model: @order, url:admin_order_path do |f| %>
          　<%= f.select :status, Order.statuses.keys.to_a, {} %><%= f.submit "更新", class: "button" %>
          　<% end %>
        </td>
  　　</tr>
       
    </table>
  </div>
  </div>
  
  
  
  
  <div class="row">
  <div class="col-md-9">  
    <table class="design01">
      <thead>
        <tr>
            <th>商品</th>
            <th>単価（税込）</th>
            <th>個数</th>
            <th>小計</th>
            <th>製作ステータス</th>
        </tr>
      </thead>
        <% @order_details.each do |order_detail| %>
      <tbody>
          <%= form_with(model:order_detail, url:admin_order_detail_path(order_detail), method: :PATCH) do |f| %>
            <tr>
              <td><%= order_detail.product.name %></td>
              <td><%= order_detail.product.in_tax_price %></td>
              <td><%= order_detail.quantity %></td>
              <td><%= order_detail.sub_total %></td>
              <td><%= f.select :making_status, OrderDetail.making_statuses.keys.to_a, {} %><%= f.submit "更新", class: "button" %></td>
            </tr>
          <% end %> 
      </tbody>
        <% end %>
    </table>
  </div>
  
  
  <div class="col-md-3 design01">  
    <table>
        <tr>
          <th>請求情報</th>
          <th></th>
        </tr>
        <tr>
          <th>商品合計</th>
          <td><%= @total.to_s(:delimited) %></td>
        </tr>
        <tr>
          <th>配送料</th>
          <td><%= @order.postage %></td>
        </tr>
        <tr>
          <th>ご請求額</th>
          <td><%= @total_price.to_s(:delimited) %></td>
    </table>
  </div>
  
  </div> 
  </div>
</div>
</main>
  
