<div>
  <table>
    <tr>
      <td>購入者</td>
      <th> <%= link_to admin_customer_path(@order) do %></th>
      <% end %>
    </tr>
    <tr>
      <td>注文日</td>
      <th><%= @order.created_at.strftime("%Y/%m/%d") %></th>
    </tr>
    <tr>
      <td>配送先</td>
      <th><%= @order.postcode %><br>
          <%= @order.address %></th>
    </tr>
    <tr>
      <td>支払方法</td>
      <th><%= @order.payment_method %></th>
    </tr>
    <tr>
      <td>ステータス</td>
      <th><%= @order.status %></th>
    </tr>
</table>
</div>
<div>
  <table>
    <thead>
      <tr>
          <th>商品</th>
          <th>単価（税込）</th>
          <th>個数</th>
          <th>小計</th>
          <th>製作ステータス</th>
          <th></th>
      </tr>
    </thead>
    <tbody>
          <% @order_details.each do |order_detail| %>
        <tr>
          <td><%= order_detail.product.name %></td>
          <td><%= order_detail.product.in_tax_price %></td>
          <td><%= order_detail.quantity %></td>
          <td><%= order_detail.sub_total %></td>
          <td></td>
          
        </tr>
          <% end %>
    </tbody>
  </table>
</div>

<div>
    <h6>請求情報</h6>
  <table>
      <tr>
        <td>商品合計</td>
        <th><%= @total.to_s(:delimited) %></th>
      </tr>
      <tr>
        <td>配送料</td>
        <th><%= @order.postage %></th>
      </tr>
      <tr>
        <td>ご請求額</td>
        <th><%= @total_price.to_s(:delimited) %></th>
  </table>
</div>
  